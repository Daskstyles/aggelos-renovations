{
  "compilerOptions": {
    "types": ["node"],
    "skipLibCheck": true,
    "target": "ES2021",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,

    "allowJs": false,
    "isolatedModules": true
  },
  "include": ["src", "api", "vite.config.ts"]
}
